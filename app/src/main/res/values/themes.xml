<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name ="MyActionBarTheme"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>

        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabTextStyle</item>


        <item name ="android:actionBarTabBarStyle">@style/MyActionBarStyle</item>

     </style>
    <!--定义actionBarTab的样式-->
    <style
        name ="MyActionBarTabs"
        parent ="android:style/Widget.Holo.ActionBar.TabView">

        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        </style>
    <!--定义Tab字体个颜色-->
    <style
        name ="MyActionBarTabTextStyle"
        parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:textSize">14dp</item>

     </style>
    <!--定义ActionBar标题的字体和颜色-->
    <style
        name ="MyActionBarStyle"
        parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:textSize">16dp</item>
    </style>
</resources>
